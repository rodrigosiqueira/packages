#!/bin/sh
## ----------------------------------------------------------------------
## debian/prerm : preremoval script for sgml-base
## ----------------------------------------------------------------------

## ----------------------------------------------------------------------
set -e

## ----------------------------------------------------------------------
if [ "$1" = "remove" ] || [ "$1" = "upgrade" ]
then

    ## ------------------------------------------------------------------
    TRANSCAT=/etc/sgml/transitional.cat
    if [ -f ${TRANSCAT} ]
    then
	rm -f ${TRANSCAT} ${TRANSCAT}.old
	update-catalog --update-super
    fi

fi

## ---------------------------------------------------------------------- 
## automatically generated debhelper commands
#DEBHELPER#

exit 0

## ----------------------------------------------------------------------
